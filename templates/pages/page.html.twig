{% extends "base.html.twig" %}

{% block title %}
    {% for page in pages %}
        {% if slug == page.url %}
            {{ page.title }}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block description %}
    {% for page in pages %}
        {% if slug == page.url %}
            <meta name="Description" CONTENT="{{ page.description }}">
        {% endif %}
    {% endfor %}
{% endblock %}

{% block body %}
    {% for page in pages %}
        {% if slug == page.url %}
            <section class="content__title">
                <h1>{{ page.title }}</h1>
            </section>
            <section class="content__main">
                    {{ page.content | raw }}
            </section>
        {% endif %}
    {% endfor %}
{% endblock %}