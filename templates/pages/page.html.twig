{% extends "base.html.twig" %}

{% block title %}
    {% for page in pages %}
        {% if slug == page.url %}
            {{ page.title }}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block description %}
    {% for page in pages %}
        {% if slug == page.url %}
            <meta name="Description" CONTENT="{{ page.description }}">
        {% endif %}
    {% endfor %}
{% endblock %}

{% block data_structure %}
    {% for page in pages %}
        {% if slug == page.url %}
            <script type="application/ld+json">
                {
                    "@context": "https://schema.org/",
                    "@type": "Page",
                    "headline": "{{ page.title|raw }}"
                },
                {
                    "datePublished": "{{ page.getDate|date('Y-m-d') }}",
                    "dateModified": "{{ page.getUpdateAt|date('Y-m-d') }}",
                }
            </script>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block body %}
    {% for page in pages %}
        {% if slug == page.url %}
            <section class="content__title">
                <h1>{{ page.title }}</h1>
            </section>
            <section class="content__main">
                    {{ page.content | raw }}
            </section>
        {% endif %}
    {% endfor %}
{% endblock %}