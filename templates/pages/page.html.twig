{% extends "base.html.twig" %}

{% block title %}
    Page 
{% endblock %}

{% block body %}
    <h1>Page template</h1>
    {% for page in pages %}
        {% if slug == page.url %}
            <h1>{{ page.title }}</h1>
            <h2>{{ page.description }}</h2>
            <p>
                {{ page.content | raw }}
            </p>
        {% endif %}
    {% endfor %}
{% endblock %}