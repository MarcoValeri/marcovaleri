{% extends "base.html.twig" %}

{% block title %}
    {% for article in articles %}
        {% if slug == article.url %}
            {{ article.title }}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block description %}
    {% for article in articles %}
        {% if slug == article.url %}
            <meta name="Description" CONTENT="{{ article.description }}">
        {% endif %}
    {% endfor %}
{% endblock %}

{% block body %}
    <main class="main">
        <section class="content">
    {% set break = false %}
    {% set notFound = true %}
    {% for article in articles %}
        {% if slug == article.url and break == false %}
            <section class="content__title">
                <h1>{{ article.title }}</h1>
            </section>
            <section class="content__main">
                    {{ article.content | raw }}
            </section>
            {% set break = true %}
            {% set notFound = false %}
        {% endif %}
        {% if break == false and notFound == true %}
            <section class="content__title">
                <h1>Articolo non trovato</h1>
            </section>
            <section class="content__main">
                    Sembra che l'articolo che stai cercando non esista.<br>
                    <a href="{{ path('app_home') }}">Torna alla home</a><br>
                    <a href="{{ path('app_contact') }}">Contatta lo staff di MarcoValeri.net</a>
            </section>
            {% set notFound = false %}
        {% endif %}
    {% endfor %}
        </section>
        <section class="sidebar">
        </section>
    </main>
{% endblock %}